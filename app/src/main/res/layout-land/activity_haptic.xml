<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.krector.wifip2p.Haptic"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/haptic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haptics"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24sp" />

    <Button
        android:id="@+id/hapticstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Recording"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="120dp"  />

    <Button
        android:id="@+id/haptic_left_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn 90째 To Your Right"
        app:layout_constraintBottom_toTopOf="@+id/hapticstart"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        />

    <Button
        android:id="@+id/haptic_right_90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn 90째 To Your Left"
        app:layout_constraintBottom_toTopOf="@+id/hapticstop"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"/>

    <Button
        android:id="@+id/haptic_right_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn 45째 To Your Left"
        app:layout_constraintBottom_toTopOf="@+id/haptic_right_90"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp" />

    <Button
        android:id="@+id/haptic_left_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn 45째 To Your Right"
        app:layout_constraintBottom_toTopOf="@+id/haptic_left_90"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        />

    <Button
        android:id="@+id/haptic_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        app:layout_constraintTop_toBottomOf="@+id/haptic_title"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/hapticstop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Recording"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="120dp" />

    <TextView
        android:id="@+id/right_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veering Left"
        app:layout_constraintBottom_toTopOf="@+id/haptic_right_45"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        />

    <TextView
        android:id="@+id/left_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Veering Right"
        app:layout_constraintBottom_toTopOf="@+id/haptic_left_45"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        />
</android.support.constraint.ConstraintLayout>